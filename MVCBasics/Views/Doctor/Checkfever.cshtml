@{
    ViewData["Title"] = "Mr Doctor - SunCode Media";
    string scaleSelected = ViewBag.SelectScale ?? "celsius";
}

<h1>Check your temperature</h1>

<div class="container-fluid">
    <form asp-controller="Doctor" asp-action="CheckFever" class="temp-form">
        <div>
            <label class="form-label" for="temp">Add current temperature</label>
            <input class="form-control" type="number" step="0.1" name="temp" />
        </div>

        <div class="form-check">
            <label class="form-check-label" for="selectScale">Select Celsius</label>
            <input class="form-check-input" type="radio" name="selectScale" @(scaleSelected == "celsius" ? "checked" : "") value="celsius" />
        </div>
        <div class="form-check">
            <label class="form-check-label" for="selectScale">Select Fahrenheit</label>
            <input class="form-check-input" type="radio" name="selectScale" @(scaleSelected == "fahrenheit" ? "checked" : "") value="fahrenheit" />
        </div>

        <button type="submit" class="btn btn-info">Check!</button>
    </form>
</div>

@if (ViewBag.Message != null)
{
    <div class="container-fluid temp-form check-fever-return">
        <div class="card">
            <div class="card-header text-center fw-bold">
                <p>
                    @ViewBag.Temp @(scaleSelected == "celsius" ? "C" : "F")
                </p>
                </div>

            <div class="card-body text-center"><p>@ViewBag.Message</p></div>
        </div>
    </div>
}

